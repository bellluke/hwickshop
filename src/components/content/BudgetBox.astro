---
interface Props {
  economy: string;
  standard: string;
  generous: string;
  economyValue?: number;
  standardValue?: number;
  generousValue?: number;
}

const {
  economy,
  standard,
  generous,
  economyValue = 35,
  standardValue = 65,
  generousValue = 100,
} = Astro.props;
---

<div class="my-8 border-t border-stone-200 pt-6">
  <h3 class="mb-4 text-sm font-semibold text-[var(--color-text-sub)] uppercase tracking-wide">
    예산 총정리
  </h3>

  <div class="space-y-3">
    <div class="flex items-center gap-3">
      <span class="w-14 flex-shrink-0 text-sm text-[var(--color-text-sub)]">절약형</span>
      <div class="flex-1">
        <div class="h-2 overflow-hidden rounded-sm bg-stone-100">
          <div
            class="h-full rounded-sm bg-[var(--color-primary)] opacity-40 transition-all duration-300"
            style={`width: ${economyValue}%`}
          />
        </div>
      </div>
      <span class="font-price w-20 flex-shrink-0 text-right text-sm">{economy}</span>
    </div>

    <div class="flex items-center gap-3">
      <span class="w-14 flex-shrink-0 text-sm text-[var(--color-text-sub)]">표준형</span>
      <div class="flex-1">
        <div class="h-2 overflow-hidden rounded-sm bg-stone-100">
          <div
            class="h-full rounded-sm bg-[var(--color-primary)] opacity-65 transition-all duration-300"
            style={`width: ${standardValue}%`}
          />
        </div>
      </div>
      <span class="font-price w-20 flex-shrink-0 text-right text-sm">{standard}</span>
    </div>

    <div class="flex items-center gap-3">
      <span class="w-14 flex-shrink-0 text-sm text-[var(--color-text-sub)]">넉넉형</span>
      <div class="flex-1">
        <div class="h-2 overflow-hidden rounded-sm bg-stone-100">
          <div
            class="h-full rounded-sm bg-[var(--color-primary)] transition-all duration-300"
            style={`width: ${generousValue}%`}
          />
        </div>
      </div>
      <span class="font-price w-20 flex-shrink-0 text-right text-sm">{generous}</span>
    </div>
  </div>
</div>
